#include <iostream>
using namespace std;

struct TreeNode {
    int val;
    TreeNode *left;
    TreeNode *right;

    TreeNode(int x) {
        val = x;
        left = right = NULL;
    }
};

class Solution {
public:
    TreeNode* insertIntoBST(TreeNode* root, int val) {

    
        if(root == NULL) 
            return new TreeNode(val);

        TreeNode *cur = root;

        // Traverse until insertion point is found
        while(true) {

            // Go to right subtree
            if(cur->val <= val) {

                if(cur->right != NULL)
                    cur = cur->right;
                else {
                    cur->right = new TreeNode(val);
                    break;
                }

            } 
            // Go to left subtree
            else {

                if(cur->left != NULL)
                    cur = cur->left;
                else {
                    cur->left = new TreeNode(val);
                    break;
                }
            }
        }

        return root;
    }
};
int maxDepth(TreeNode* root) {
    if (root == NULL) return 0;

    int leftDepth = maxDepth(root->left);
    int rightDepth = maxDepth(root->right);

    return 1 + max(leftDepth, rightDepth);
}

int minDepth(TreeNode* root) {
    if (root == NULL) return 0;

    // If one child is NULL, we must take the depth of the non-null child
    if (root->left == NULL)
        return 1 + minDepth(root->right);

    if (root->right == NULL)
        return 1 + minDepth(root->left);

    // If both children exist, take the minimum depth
    return 1 + min(minDepth(root->left), minDepth(root->right));
}

// Utility function to print inorder traversal (sorted order for BST)
void inorder(TreeNode* root) {
    if(root == NULL) return;
    inorder(root->left);
    cout << root->val << " ";
    inorder(root->right);
}

int main() {

    Solution obj;

    TreeNode* root = new TreeNode(8);
    root->left = new TreeNode(3);
    root->right = new TreeNode(10);
    root->left->left = new TreeNode(1);
    root->left->right = new TreeNode(6);
    root->right->right = new TreeNode(14);

    int val = 7; // Value to insert

    root = obj.insertIntoBST(root, val);

    cout << "Inorder Traversal after insertion: ";
    inorder(root);
    cout << endl;

    return 0;
}
