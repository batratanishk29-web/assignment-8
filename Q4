#include <iostream>
#include <limits.h>
using namespace std;

struct Node {
    int key;
    Node* left;
    Node* right;

    Node(int k) {
        key = k;
        left = right = NULL;
    }
};

// Function to check if the tree is BST using valid range
bool isBSTUtil(Node* root, long long minVal, long long maxVal) {
    if (root == NULL)
        return true;

    // Node must lie in the valid range
    if (root->key <= minVal || root->key >= maxVal)
        return false;

    return isBSTUtil(root->left, minVal, root->key)
        && isBSTUtil(root->right, root->key, maxVal);
}

bool isBST(Node* root) {
    return isBSTUtil(root, LLONG_MIN, LLONG_MAX);
}

int main() {
    Node* root = new Node(8);
    root->left = new Node(3);
    root->right = new Node(10);
    root->left->left = new Node(1);
    root->left->right = new Node(6);
    root->right->right = new Node(14);

    if (isBST(root))
        cout << "The tree is a BST\n";
    else
        cout << "The tree is NOT a BST\n";

    return 0;
}
